<% include ../layout/header %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>All Articles</h1>
      <% for (var i = 0; i < articles.length; i++) { %>
        <div class="well">
          <a href="/articles/<%= articles[i]._id %>"><h1><%= articles[i].title %></h1></a>
          <p><strong>By: <%= articles[i].author %></strong></p>
        </div>
      <% } %>
    </div>
  </div>
</div>

